<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_finance_expense_tree" model="ir.ui.view">
            <field name="name">finance.expense.tree</field>
            <field name="model">finance.expense</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="expense_type"/>
                    <field name="amount"/>
                    <field name="state"/>
                    <field name="create_date"/>
                </tree>
            </field>
        </record>

        <record id="view_finance_expense_form" model="ir.ui.view">
            <field name="name">finance.expense.form</field>
            <field name="model">finance.expense</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="expense_type"/>
                                <field name="amount"/>
                                <field name="state"/>
                            </group>
                            
                            <group>
                                <field name="create_date"/>
                                <field name="approval_note"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_finance_expense" model="ir.actions.act_window">
            <field name="name">Yêu cầu hoàn tiền</field>
            <field name="res_model">finance.expense</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_finance_expense_tree"/>
        </record>
        
        <menuitem 
            id="menu_finance_expense_root"        
            name="Quản lý tài chính"              
            sequence="10"                         
        />
        
        <menuitem 
            id="menu_finance_expense"             
            name="Yêu cầu hoàn tiền"              
            parent="menu_finance_expense_root"    
            action="action_finance_expense"       
            sequence="10"                         
        />
    </data>
</odoo>