# -*- coding: utf-8 -*-

<odoo>
    <record id="view_product_tree" model="ir.ui.view">
        <field name="name">product.tree</field>
        <field name="model">inventory.product</field>
        <field name="arch" type="xml">
            <tree string="Products">
                <field name="name"/>
                <field name="price"/>
                <field name="stock"/>
            </tree>
        </field>
    </record>

    <record id="view_product_form" model="ir.ui.view">
        <field name="name">product.form</field>
        <field name="model">inventory.product</field>
        <field name="arch" type="xml">
            <form string="Product">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="price"/>
                        <field name="stock"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_product" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="res_model">inventory.product</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_product" name="Products" action="action_product" parent="base.menu_custom"/>
</odoo>

