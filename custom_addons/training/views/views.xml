# -*- coding: utf-8 -*-

<odoo>
    <record id="view_course_tree" model="ir.ui.view">
        <field name="name">course.tree</field>
        <field name="model">training.course</field>
        <field name="arch" type="xml">
            <tree string="Courses">
                <field name="name"/>
                <field name="duration"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_course_form" model="ir.ui.view">
        <field name="name">course.form</field>
        <field name="model">training.course</field>
        <field name="arch" type="xml">
            <form string="Course">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="duration"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_course" model="ir.actions.act_window">
        <field name="name">Courses</field>
        <field name="res_model">training.course</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_course" name="Courses" action="action_course" parent="base.menu_custom"/>
</odoo>

