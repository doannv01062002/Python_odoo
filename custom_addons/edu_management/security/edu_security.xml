<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="module_edu_category" model="ir.module.category">
        <field name="name">Giáo dục</field>
        <field name="description">Quản lý đào tạo và lớp học</field>
        <field name="sequence">10</field>
    </record>

    <record id="group_edu_user" model="res.groups">
        <field name="name">Giáo vụ (User)</field>
        <field name="category_id" ref="module_edu_category"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_edu_manager" model="res.groups">
        <field name="name">Quản lý (Manager)</field>
        <field name="category_id" ref="module_edu_category"/>
        <field name="implied_ids" eval="[(4, ref('group_edu_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <!-- Record Rule: User can only see their own sessions or sessions they instruct -->
    <record id="rule_edu_session_user_visibility" model="ir.rule">
        <field name="name">Edu Session: User Visibility</field>
        <field name="model_id" ref="model_edu_session"/>
        <field name="groups" eval="[(4, ref('group_edu_user'))]"/>
        <field name="domain_force">['|', ('create_uid', '=', user.id), ('instructor_id.user_id', '=', user.id)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>
    
    <!-- Record Rule: Manager sees all -->
    <record id="rule_edu_session_manager_visibility" model="ir.rule">
        <field name="name">Edu Session: Manager Visibility</field>
        <field name="model_id" ref="model_edu_session"/>
        <field name="groups" eval="[(4, ref('group_edu_manager'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>
</odoo>
