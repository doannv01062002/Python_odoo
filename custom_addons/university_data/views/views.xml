# -*- coding: utf-8 -*-

<odoo>
    <record id="view_course_tree" model="ir.ui.view">
        <field name="name">course.tree</field>
        <field name="model">university.course</field>
        <field name="arch" type="xml">
            <tree string="Courses">
                <field name="name"/>
                <field name="credit"/>
            </tree>
        </field>
    </record>

    <record id="view_course_form" model="ir.ui.view">
        <field name="name">course.form</field>
        <field name="model">university.course</field>
        <field name="arch" type="xml">
            <form string="Course">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="credit"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_student_tree" model="ir.ui.view">
        <field name="name">student.tree</field>
        <field name="model">university.student</field>
        <field name="arch" type="xml">
            <tree string="Students">
                <field name="name"/>
                <field name="year"/>
            </tree>
        </field>
    </record>

    <record id="view_student_form" model="ir.ui.view">
        <field name="name">student.form</field>
        <field name="model">university.student</field>
        <field name="arch" type="xml">
            <form string="Student">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="year"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_course" model="ir.actions.act_window">
        <field name="name">Courses</field>
        <field name="res_model">university.course</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_student" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">university.student</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_university" name="University Data" parent="base.menu_custom"/>
    <menuitem id="menu_course" name="Courses" action="action_course" parent="menu_university"/>
    <menuitem id="menu_student" name="Students" action="action_student" parent="menu_university"/>
</odoo>

