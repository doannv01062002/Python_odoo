# -*- coding: utf-8 -*-

<odoo>
    <record id="view_school_tree" model="ir.ui.view">
        <field name="name">school.tree</field>
        <field name="model">school.management</field>
        <field name="arch" type="xml">
            <tree string="Schools">
                <field name="name"/>
                <field name="location"/>
                <field name="start_date"/>
            </tree>
        </field>
    </record>

    <record id="view_school_form" model="ir.ui.view">
        <field name="name">school.form</field>
        <field name="model">school.management</field>
        <field name="arch" type="xml">
            <form string="School">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="location"/>
                        <field name="start_date"/>
                    </group>
                    <notebook>
                        <page string="Students">
                            <field name="student_ids">
                                <tree string="Students">
                                    <field name="name"/>
                                    <field name="age"/>
                                    <field name="score"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Exams">
                            <field name="exam_ids">
                                <tree string="Exams">
                                    <field name="exam_date"/>
                                    <field name="subject"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_student_tree" model="ir.ui.view">
        <field name="name">student.tree</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <tree string="Students">
                <field name="name"/>
                <field name="age"/>
                <field name="school_id"/>
                <field name="score"/>
            </tree>
        </field>
    </record>

    <record id="view_student_form" model="ir.ui.view">
        <field name="name">student.form</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <form string="Student">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="age"/>
                        <field name="school_id"/>
                        <field name="score"/>
                    </group>
                    <notebook>
                        <page string="Exams">
                            <field name="exam_ids">
                                <tree string="Exams">
                                    <field name="exam_date"/>
                                    <field name="subject"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_exam_tree" model="ir.ui.view">
        <field name="name">exam.tree</field>
        <field name="model">school.exam</field>
        <field name="arch" type="xml">
            <tree string="Exams">
                <field name="exam_date"/>
                <field name="subject"/>
                <field name="school_id"/>
            </tree>
        </field>
    </record>

    <record id="view_exam_form" model="ir.ui.view">
        <field name="name">exam.form</field>
        <field name="model">school.exam</field>
        <field name="arch" type="xml">
            <form string="Exam">
                <sheet>
                    <group>
                        <field name="exam_date"/>
                        <field name="subject"/>
                        <field name="school_id"/>
                    </group>
                    <group>
                        <field name="students" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_school" model="ir.actions.act_window">
        <field name="name">Schools</field>
        <field name="res_model">school.management</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_student" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">school.student</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_exam" model="ir.actions.act_window">
        <field name="name">Exams</field>
        <field name="res_model">school.exam</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_school" name="School Management" parent="base.menu_custom"/>
    <menuitem id="menu_school_item" name="Schools" action="action_school" parent="menu_school"/>
    <menuitem id="menu_student" name="Students" action="action_student" parent="menu_school"/>
    <menuitem id="menu_exam" name="Exams" action="action_exam" parent="menu_school"/>
</odoo>

