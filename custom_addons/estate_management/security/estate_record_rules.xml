<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <data>
        <record id="estate_property_rule_agent_personal" model="ir.rule">
            <field name="name">Personal Property Only</field>
            <field name="model_id" ref="model_estate_property"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('estate.group_estate_agent'))]"/>
        </record>

        <record id="estate_property_rule_manager_all" model="ir.rule">
            <field name="name">All Property</field>
            <field name="model_id" ref="model_estate_property"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('estate.group_estate_manager'))]"/>
        </record>
    </data>
</odoo>
