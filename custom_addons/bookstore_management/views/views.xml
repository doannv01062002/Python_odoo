# -*- coding: utf-8 -*-

<odoo>
    <record id="view_book_tree" model="ir.ui.view">
        <field name="name">book.tree</field>
        <field name="model">bookstore.book</field>
        <field name="arch" type="xml">
            <tree string="Books">
                <field name="title"/>
                <field name="author"/>
                <field name="price"/>
                <field name="publish_date"/>
            </tree>
        </field>
    </record>

    <record id="view_book_form" model="ir.ui.view">
        <field name="name">book.form</field>
        <field name="model">bookstore.book</field>
        <field name="arch" type="xml">
            <form string="Book">
                <sheet>
                    <group>
                        <field name="title"/>
                        <field name="author"/>
                        <field name="price"/>
                        <field name="publish_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_book" model="ir.actions.act_window">
        <field name="name">Books</field>
        <field name="res_model">bookstore.book</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_book" name="Books" action="action_book" parent="base.menu_custom"/>
</odoo>

