# -*- coding: utf-8 -*-

<odoo>
    <record id="view_report_tree" model="ir.ui.view">
        <field name="name">report.tree</field>
        <field name="model">payment.report</field>
        <field name="arch" type="xml">
            <tree string="Reports">
                <field name="title"/>
                <field name="total"/>
            </tree>
        </field>
    </record>

    <record id="view_report_form" model="ir.ui.view">
        <field name="name">report.form</field>
        <field name="model">payment.report</field>
        <field name="arch" type="xml">
            <form string="Report">
                <sheet>
                    <group>
                        <field name="title"/>
                        <field name="total"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_report" model="ir.actions.act_window">
        <field name="name">Reports</field>
        <field name="res_model">payment.report</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_report" name="Payment Reports" action="action_report" parent="base.menu_custom"/>
</odoo>

