<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
  
    <record id="hr_candidate_tree_view" model="ir.ui.view">
      <field name="name">model.tree</field>
      <field name="model">hr.candidate</field>
      <field name="arch" type="xml">
        <tree string="Danh sách lớp K23-HN" decoration-success="is_hired==True">
          <field name="name" string="Tên"></field>
          <field name="gender" string="Giới tính"></field>
          <field name="is_hired" string="Đã tuyển"></field>
        </tree> 
      </field>
    </record>
  
    <record id="hr_candidate_form_view" model="ir.ui.view">
      <field name="name">model.form</field>
      <field name="model">hr.candidate</field>
      <field name="arch" type="xml">
        <form string="Chi tiết ứng viên">
          <div class="oe_title">
            <h1>
              <field name="name" string="Tên"/>
            </h1>
          </div>

          <group>
            <field name="job_id" string="Công việc ứng tuyển" widget="selection"></field>
          </group>
          
          <group>
            <field name="job_id" string="Công việc ứng tuyển" widget="radio"></field>
          </group>

          <group>
            <field name="offer_ids">
              <tree string="Mức đãi ngộ">
                <field name="price" string="Mức lương"></field>
                <field name="status" string="Trạng thía"></field>
              </tree>
            </field>
          </group>

          <group name="name">
            <field name="tag_ids" string="Kỹ năng" widget="many2many_tags"></field>
          </group>
          <sheet>
            <group>
              <field name="name" string="Tên"></field>
              <field name="gender" string="Giới tính"></field>
              <field name="birthday" string="Ngày sinh"></field>
              <field name="is_hired" string="Đã tuyển"></field>
            </group>
            <notebook>
              <page string="Phanh">
                
              </page>
              <page string="Hoàng"></page>
            </notebook>
          </sheet>
        </form> 
      </field>
    </record>

    <record id="hr_candidate_view_search" model="ir.ui.view">
      <field name="name">model.search</field>
      <field name="model">hr.candidate</field>
      <field name="arch" type="xml">
        <search string="Tìm kiếm">
          <field name="name"/>
          <field name="cv_content"/>

          <filter string="Giới tính" name="gender" domain="[('gender', 'in', ('male', 'female'))]"/>

          <group expand="1" string="Group By">
            <filter string="Giới tính" name="gender_groupby" context="{'group_by':'gender'}"/>
          </group>
        </search>
      </field>
    </record>
  </data>
</odoo>
